<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gluconnect">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_gluconnect"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_gluconnect_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UI.LogsActivity"
            android:label="Logs"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".UI.DailyLogsActivity"
            android:label="@string/title_activity_daily_logs"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@layout/searchable" />
        </activity>
        <activity
            android:name=".UI.DetailsActivity"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".UI.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".UI.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gluconnect.UI.LoginActivity" />
        </activity>
        <activity
            android:name=".UI.LoginActivity"
            android:label="Gluconnect"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>