<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AnalyticsFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/analytics_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="  Filter By: "
        android:textSize="@dimen/title_textsize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/analytics_filter_by_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="Year: "
        android:textSize="@dimen/title_textsize"
        app:layout_constraintStart_toEndOf="@id/analytics_filter"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/analytics_filter_by_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Month: "
        android:textSize="@dimen/title_textsize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toEndOf="@id/analytics_filter_by_year"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/linechart"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/analytics_filter_by_month" />

    <TextView
        android:id="@+id/alert_levels_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Alert Blood glucose levels:"
        android:textColor="@color/material_red_900"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/linechart"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linechart"
        app:layout_constraintTop_toBottomOf="@+id/linechart" />

    <TextView
        android:id="@+id/alert_levels_fasting_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Hypoglycemia > 70 mg/dl"
        android:textColor="@color/material_red_900"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/alert_levels_textview"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/alert_levels_textview"
        app:layout_constraintTop_toBottomOf="@+id/alert_levels_textview" />

    <TextView
        android:id="@+id/alert_levels_random_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Random Blood Glucose > 200 mg/dl"
        android:textColor="@color/material_red_900"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/alert_levels_fasting_msg"
        app:layout_constraintTop_toBottomOf="@+id/alert_levels_fasting_msg" />

    <TextView
        android:id="@+id/alert_levels_hypoglycemia_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fasting Blood Glucose > 126 mg/dl"
        android:textColor="@color/material_red_900"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/alert_levels_random_msg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/alert_levels_random_msg"
        app:layout_constraintTop_toBottomOf="@+id/alert_levels_random_msg" />


</androidx.constraintlayout.widget.ConstraintLayout>